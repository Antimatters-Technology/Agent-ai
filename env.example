# VisaMate AI Environment Configuration

# Application Settings
APP_NAME=VisaMate AI
API_VERSION=v1
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# AWS Configuration (all secrets stored in AWS Secrets Manager â€“ DO NOT hard-code here)
AWS_REGION=us-east-1
# Secret path examples: /visamate/dev/aws_access_key_id , /visamate/dev/aws_secret_access_key
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Cognito Authentication (stored in Secrets Manager)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
JWT_SECRET=

# RDS or Aurora credentials (stored in Secrets Manager)
RDS_ENDPOINT=
RDS_DATABASE=visamate
RDS_USERNAME=
RDS_PASSWORD=
DATABASE_URL=

# AI Provider API Keys (Secrets Manager paths)
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Stripe / Payment (Secrets Manager)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# WhatsApp / Twilio (Secrets Manager)
WHATSAPP_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Monitoring / Logging
SENTRY_DSN=

# Encryption key (Secrets Manager path: /visamate/prod/encryption_key)
ENCRYPTION_KEY=

# AWS Services
DYNAMODB_TABLE_PREFIX=visamate
S3_BUCKET_NAME=visamate-documents

# Google Gemini AI
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Development Settings
RATE_LIMIT_PER_MINUTE=60
SOP_MIN_WORDS=800
SOP_MAX_WORDS=1500
MAX_FILE_SIZE_MB=10

# Monitoring (optional)
GOOGLE_ANALYTICS_ID=your-ga-id 